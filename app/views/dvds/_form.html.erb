<%= form_for(@dvd, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @dvd.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dvd.errors.count, "error") %> prohibited this dvd from being saved:</h2>

      <ul>
      <% @dvd.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
      
    </div>
  <% end %>
  <fieldset>
    <div class="control-group">
      <%= f.label :title, :class => "control-label"%>
      <div class="controls">
	      <%= f.text_field :title, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :release, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :release, :class => "input-small" %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :genre, :class => "control-label" %>
      <div class="controls">
        <%= collection_select(:dvd, :genre_id, Genre.all, :id, :name, :prompt => true) %>
      </div>
    </div>
  <div class="control-group">
    <%= f.label :director, :class => "control-label" %>
    <div class="controls">
      <%= collection_select(:dvd, :director_id, Director.all, :id, :full_name, :prompt => true) %>
    </div>
  </div>  
  <div class="control-group">
    <%= f.label :notes,:class => "control-label" %>
    <div class="controls">
	    <%= f.text_area :notes, :class => "input-xlarge", :size => "60x12" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :url, :class => "input-xlarge" %>
      <span class="help-block">URL of a boxcover image</span> 
    </div>
  </div>
  <div class="form-actions">
	  
    <%= f.submit class: "btn btn-large btn-primary" %>
  </div>
  </fieldset>
<% end %>
