<% provide(:title, "Listing DVDs") %>
<h1>Listing dvds</h1>

<table class="table table-bordered table-condensed table-striped">
  <thead>
    <tr>	  
      <th>Title</th>
      <th>Release</th>
      <th>Genre</th>
      <th>Director</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<% @dvds.each do |dvd| %>
    <tr>
      <td><%= dvd.title %></td>
      <td><%= dvd.release %></td>
      <td><%= dvd.try(:genre).try(:name) %></td>
      <td><%= dvd.try(:director).try(:full_name) %></td>
      <td><%= link_to 'Show', dvd %></td>
      <td><%= link_to 'Edit', edit_dvd_path(dvd) %></td>
      <td><%= link_to 'Destroy', dvd, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Dvd', new_dvd_path %>
