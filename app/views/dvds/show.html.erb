<% provide(:title, @dvd.title) %>
<p id="notice"><%= notice %></p>

<h1> 
  <%= @dvd.title %>
</h1>
<div id="box_cover">
  <%= include_boxcover %>
</div>
  <div class="row-fluid">
    <div class="span1"><b>Title:</b></div>
    <div class="span11">  <%= @dvd.title %> </div>
  </div>

  <div class="row-fluid">
    <div class="span1"><b>Release:</b></div>
    <div class="span11"><%= @dvd.release %></div>
  </div>

  <div class="row-fluid">
    <div class="span1"><b>Genre:</b></div>
    <div class="span11"><%= @dvd.try(:genre).try(:name) %></div>
  </div>  
		    		    
  <div class="row-fluid">
    <div class="span1"><b>Director:</b></div>
    <div class="span11"><%= @dvd.try(:director).try(:full_name) %></div>
  </div>

  <div class="row-fluid">
    <div class="span1"><b>Notes:</b></div>
    <div class="span11"><%= @dvd.notes %></div>
  </div>
<%= link_to 'Edit', edit_dvd_path(@dvd) %> |
<%= link_to 'Back', dvds_path %>
